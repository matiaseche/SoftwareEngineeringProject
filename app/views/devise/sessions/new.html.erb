<h3>Iniciar Sesión</h3>
<br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
<div class="form-group">
    <%= f.label :Nombre_usuario, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.text_field :login, autofocus: true , class: "form-control" %>
    </div>
</div>

<div class="form-group">
    <%= f.label :Contraseña, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
</div>

<% if devise_mapping.rememberable? -%>
<div class="form-group">
    <div class="col-sm-6 col-sm-offset-2">
        <%= f.check_box :remember_me %> <%= f.label :Recordar_cuenta %>
    </div>
</div>
<% end -%>

<div class="form-group">
    <div class="col-sm-6 col-sm-offset-2">
        <%= f.submit "Iniciar Sesión", class:"valign-wrapper",class:"waves-effect waves-light btn light-blue darken-2" %>
    </div>
</div>
<br>

<div class="form-group">
    <div class="col-sm-6 col-sm-offset-2">
        <%= render "devise/shared/links" %>
    </div>
</div>

<% end %>