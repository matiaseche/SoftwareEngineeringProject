<h3>Editar Información</h3>
<br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>
<%= devise_error_messages! %>

<div class="form-group">
  <%= f.label :Foto, class: 'col-sm-2 control-label' %>
  <div class="col-sm-6">
    <%= f.file_field :avatar %>
  </div>
</div>
<br>

<div class="form-group">
    <%= f.label :Nombre, class: 'col-sm-2 control-label'  %>
    <div class="col-sm-6">
        <%= f.text_field :first_name, autofocus: true, class: 'form-control'  %>
    </div>
</div>
<br>
<div class="form-group">
    <%= f.label :Apellido, class: 'col-sm-2 control-label'  %>
    <div class="col-sm-6">
        <%= f.text_field :last_name, autofocus: true, class: 'form-control'  %>
    </div>
</div>

<br>
<div class="form-group">
    <%= f.label :Nombre_Usuario, class: 'col-sm-2 control-label'  %>
    <div class="col-sm-6">
        <%= f.text_field :username, autofocus: true, class: 'form-control'  %>
    </div>
</div>
<br>
<div class="form-group">
    <%= f.label :Correo, class: 'col-sm-2 control-label'  %>
    <div class="col-sm-6">
        <%= f.email_field :email, class: 'form-control'  %>
    </div>
</div>
<br>
<div class="form-group">
    <%= f.label :Contraseña, class: 'col-sm-2 control-label'  %> <i>(Déjelo en blanco si no desea cambiar su contraseña)</i>
    <div class="col-sm-6">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control'  %>
    </div>
</div>

<br>
<div class="form-group">
    <%= f.label :Confirmar_Contraseña, class: 'col-sm-2 control-label' %>
    <div class="col-sm-6">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'  %>
    </div>
</div>
<br>
<div class="form-group">
    <%= f.label :Contraseña_Actual, class: 'col-sm-2 control-label' %> <i>(Necesitamos su contraseña para confirmar los cambios)</i>
    <div class="col-sm-6">
        <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
    </div>
</div>
<br>
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
        <%= f.submit "Actualizar", class:"valign-wrapper",class:"waves-effect waves-light btn light-blue darken-2" %>
    </div>
</div>
<% end %>



<p><%= button_to "Eliminar Cuenta", registration_path(resource_name), data: { confirm: "Estás seguro que quieres eliminar la cuenta?" }, method: :delete, class:'valign-wrapper',class:'waves-effect waves-light btn light-blue darken-2' %></p>

<div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
        <%= render "devise/shared/links" %>
    </div>
</div>

<%= link_to "Volver Atrás", :back %>